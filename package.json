{
    "name": "mydiaryts",
    "version": "2.0.0",
    "description": "Rebasing myDiary project using Typescript ",
    "scripts": {
        "client": "npm run dev --prefix client",
        "client:install": "npm i --prefix client",
        "client:build": "npm run build --prefix client",
        "tsc": "tsc",
        "server:prod": "client:install && tsc && node ./dist/app.js",
        "server:dev": "ts-node-dev --respawn --transpileOnly ./app.ts",
        "dev": "concurrently \"npm run server:dev\" \"npm run client\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/golont/MyDiaryTS.git"
    },
    "keywords": [
        "mern",
        "diary",
        "typescript"
    ],
    "author": "Vasilev Vladislav <vladpanda123@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/golont/MyDiaryTS/issues"
    },
    "homepage": "https://github.com/golont/MyDiaryTS#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "config": "^3.2.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-validator": "^6.3.1",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.24.0",
        "mongoose": "^5.8.3",
        "typescript": "^3.7.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.2",
        "concurrently": "^5.0.2",
        "cross-env": "^6.0.3",
        "ts-node-dev": "^1.0.0-pre.44"
    }
}
